  <script>
    const messages = [
      "You're so pretty 🧡",
      "You're super smart 🧠✨",
      "You're very funny 😂",
      "Your ambition is inspiring 🌟",
      "You have a nice booty 🍑",
      "You make bad days better🌻🌞",
      "You have great impressions 🐵",
      "You're stronk 💪",
      "You're kind 😇",
      "You would beat me in a fight ig 🥊"
    ];

    function showMessage(index) {
      const box = document.getElementById('messageBox');
      box.innerText = messages[index];
      box.style.display = "block";
    }
  </script>
